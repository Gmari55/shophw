@using System.Globalization;
@model Data.Entities.Product;

<h1>Update Product</h1>

<form asp-action="Edit" method="post": class="row g-3">
    <div class="col-md-12">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter product name">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" class="form-control" placeholder="Enter product price" value="@Model.Price.ToString("0", CultureInfo.InvariantCulture)">
        <span asp-validation-for="Price" class="form-text text-danger"></span>

    </div>

    <div class="col-md-12">
        <label asp-for="description" class="form-label">Description</label>
        <input asp-for="description" type="text" class="form-control" placeholder="Enter product description" rows="3">
        <span asp-validation-for="description" class="form-text text-danger"></span>

    </div>
    <div class="col-md-12">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.CategoryList" class="form-select">
            <option disabled selected>Choose...</option>

            
        </select>

        <span asp-validation-for="CategoryId" class="form-text text-danger"></span>

    </div>
    <div class="col-6">
        <a asp-action="AdminPanel" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-success w-100">Save</button>
    </div>
</form>